<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rly_titlebar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <TextView
        android:id="@+id/title_bar_leftTxt"
        style="@style/title_bar_text"
        android:layout_gravity="center_vertical" />

    <ImageView
        android:id="@+id/title_bar_leftImg"
        style="@style/title_bar_img"
        android:layout_gravity="start|center_vertical" />

    <ImageView
        android:id="@+id/title_bar_rightImg"
        style="@style/title_bar_img"
        android:layout_alignParentRight="true"
        android:layout_gravity="end|center_vertical"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/title_bar_rightTxt"
        style="@style/title_bar_text"
        android:layout_alignParentRight="true"
        android:layout_gravity="end|center_vertical"
        android:layout_marginRight="10dp" />


    <TextView
        android:id="@+id/title_bar_centerTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:maxLength="12"
        android:singleLine="true"
        android:textSize="18sp" />

    <FrameLayout
        android:id="@+id/fly_title_contains"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

    </FrameLayout>
</RelativeLayout>